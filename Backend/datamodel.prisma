type Thing {
  id: ID! @id @unique
  title: String!
  author: Member!
  featuredImage: String
  originalSource: String! @unique
  summary: [String!] @scalarList(strategy:RELATION)
  includedLinks: [Link]
  includedThings: [Thing]
  partOfNarratives: [Narrative]
  votes: [Vote]
  passes: [Pass]
  score: Int! @default(value: 0)
  winner: Boolean @default(value: false)
  comments: [Comment]
  eliminated: Boolean! @default(value: false)
  finalistDate: DateTime
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Narrative {
  id: ID! @id @unique
  title: String! @unique
  connectedThings: [Thing]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Comment {
  id: ID! @id @unique
  author: Member!
  comment: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
  onThing: Thing
  onLink: Link
  onComment: Comment
}

type Link {
  id: ID! @id @unique
  title: String!
  url: String!
  onThing: Thing
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Vote {
  id: ID! @id @unique
  voter: Member!
  onThing: Thing
  onComment: Comment
  value: Int!
  createdAt: DateTime! @createdAt
}

type Pass {
   id: ID! @id @unique
   passer: Member!
   onThing: Thing
   createdAt: DateTime! @createdAt
}

type Member {
  id: ID! @id @unique
  displayName: String!
  name: String
  avatar: String
  rep: Int! @default(value: 0)
  points: Int! @default(value: 1)
  giveableRep: Int! @default(value: 0)
  twitchName: String
  email: String! @unique
  votes: [Vote]
  passes: [Pass]
  submissions: [Thing]
  comments: [Comment]
  password: String!
  roles: [Role!] @scalarList(strategy: RELATION)
  resetToken: String
  resetTokenExpiry: Float
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

enum Role {
  Admin
  Editor
  Moderator
  Member
  LiteMember
}
